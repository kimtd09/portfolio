body {
}

header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

ul {
    display: flex;
    gap : 5px;
    padding: 0;
    margin: 0;
}

nav ul {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    list-style: none;
}

nav li {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 5px 5px;
    width: 100px;
    /* border-bottom: 1px silver solid;
    border-right: 1px silver solid; */
    background-color: cornflowerblue;
    color: white;
    box-sizing: border-box;
}

nav li:last-child {
    border-bottom: none;
}

li:first-child {
    list-style: none;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* background-color: wheat; */
    width: 350px;
    height: 400px;
    margin: 0 auto;
    padding: 10px;
    box-sizing: border-box;
    border: 1px solid silver;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.123);
}

.content-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
}

@media screen and (min-width: 600px) {
    .container {
        flex-direction: row;
        padding: 0;
        width: 550px;
    }

    nav {
        height: 100%;
    }

    nav ul {
        height: 100%;
        justify-content: start;
        padding: 0;
        gap: 1px;
    }

    nav li {
        width: 120px;
    }
}